    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bills Manager</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Khách hàng</th>
                            <th>Mã đơn</th>
                            <th>Món ăn</th>
                            <th>Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.bills.forEach((element, index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= element.username %> </td>
                            <td>#<%= element.iddonhang %> </td>
                            <% if (data.role == 'admin'){ %>
                                <td><%= element.foods.map(e => e.title+'('+e.vendorowner+')').join(', ')%></td>
                            <% } else {%>
                                <td><%= element.foods.map(e => e.title).join(', ')%></td>
                            <% } %>
                            <td style="text-align: right;"><%= element.foods.map(e => e.price).reduce((total,price)=> total + price)%></td>
                            
                        </tr>

                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>