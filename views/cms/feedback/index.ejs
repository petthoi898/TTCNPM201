    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bills Manager</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Khách hàng</th>
                            <th>Mã đơn</th>
                            <th>Nội dung</th>
                            <th>Số sao</th>
                            <% if (data.role == 'admin'){ %>
                            <th>Vendor</th>
                            <% } %>
                            <th>Ngày</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.fb.forEach((element, index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= element.username %> </td>
                            <td><%= element.donhang %> </td>
                            <td style="text-align: left;"><%= element.nhanxet %> </td>
                            <td style="text-align: center;"><%= element.rate %> </td>
                            <% if (data.role == 'admin'){ %>
                            <th><%= element.vendorname %></th>
                            <% } %>
                            <td>
                                <%= element.created_date %>
                            </td>
                        </tr>

                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>